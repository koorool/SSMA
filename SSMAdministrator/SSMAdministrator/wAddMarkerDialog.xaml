<Window x:Class="SSMAdministrator.wAddMarkerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SSMA: Добавление маркера" Height="300" Width="545.548" Topmost="True" WindowStartupLocation="CenterOwner" Icon="CustomMarkers/blue-dot.png">
    <Grid>
        <Grid>
            <TextBox x:Name="tbName" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" GotKeyboardFocus="tbName_GotKeyboardFocus"/>
            <TextBox x:Name="tbDescription" Margin="10,38,10,58" TextWrapping="Wrap" Text="Описание" GotFocus="tbDescription_GotFocus"/>
            <Button Content="Сохранить" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="22" VerticalAlignment="Bottom" Click="Button_Click"/>
            <RadioButton x:Name="rbFreeWare" Content="FreeWare" HorizontalAlignment="Left" Margin="10,0,0,37" VerticalAlignment="Bottom" IsChecked="True"/>
            <RadioButton x:Name="rbPaidWare" Content="PaidWare" HorizontalAlignment="Left" Margin="81,0,0,37" Height="16" VerticalAlignment="Bottom"/>
            <Label x:Name="lCoords" Content="Coords" Margin="0,0,10,6" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="272"/>
        </Grid>

    </Grid>
</Window>
